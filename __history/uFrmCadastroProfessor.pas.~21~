{$R *.dfm}

procedure TFrmCadastroProfessor.btnSalvarClick(Sender: TObject);
var
  qrySalvar: TFDQuery;
begin
  qrySalvar := TFDQuery.Create(nil);
  try
    qrySalvar.Connection := DM.Connection;
    qrySalvar.Sql.Add(' INSERT INTO PROFESSORES(NOME, CPF, SEXO, DATA_NASCIMENTO, EMAIL, DISCIPLINA) VALUES ');
    qrySalvar.Sql.Add(' (:pNome, :pCpf, :pSexo, :pDataNasc, :pEmail, :pDisciplina) ');
    qrySalvar.Params.ParamByName('pNome').Value := edtNome.Text;
    qrySalvar.Params.ParamByName('pCpf').Value := edtCPF.Text;
    qrySalvar.Params.ParamByName('pSexo').Value := copy(cbbSexo.Text,1,1);
    qrySalvar.Params.ParamByName('pDataNasc').Value := StrToDate(edtNascimento.Text);
    qrySalvar.Params.ParamByName('pEmail').Value :=
    qrySalvar.Params.ParamByName('pDisciplina').Value :=
  finally
    FreeAndNil(qrySalvar);
  end;
end;

end.
